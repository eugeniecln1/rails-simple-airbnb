<h1>All our Flats (<%= @flats.length %>)</h1>
<p>Have a look at our flats belows</p>



<div class="card-columns">
  <% @flats.each do |flat| %>
  <div class="card">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body" style="background-color: #F8F9FA">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.address %></p>
      <div class="d-flex">
        <div class="mr-sm-2"><i class="fas fa-users"></i><%= flat.number_of_guests %></div>
        <div class="mr-sm-2"><i class="fas fa-euro-sign"></i><%= flat.price_per_night %></div>
      </div>
    </div>
    <div class="card-footer" style="background-color: white">
      <ul class="nav nav-pills card-header-pills">
        <li class="nav-item mr-sm-2">
          <a class="nav-link"><%= link_to 'More info', flat %></a>
        </li>
        <li class="nav-item mr-sm-2">
          <a class="nav-link"><%= link_to 'Edit', edit_flat_path(flat) %></a>
        </li>
        <li class="nav-item mr-sm-2">
          <a class="nav-link"><%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' } %></a>
        </li>
      </ul>
    </div>
  </div>
  <% end %>
</div>
