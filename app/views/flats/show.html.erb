<div class="banner">
  <img src="https://picsum.photos/200/300" alt="">
</div>

<div class="row justify-content-between">
  <div class="col-8">
    <div class="card">
      <h1><%= @flat.name %></h1>
      <p><%= @flat.address %></p>
    </div>
    <div class="card">
      <h3>A bit more about this flat ...</h3>
      <p><%= @flat.description %></p>
    </div>
  </div>

  <div class="col-4">
    <div class="card">
      <h3>Book this place!</h3>
    </div>

    <div class="card">
      <h3>Details</h3>
      <div class="d-flex">
        <div class="mr-sm-2"><i class="fas fa-users"></i><%= @flat.number_of_guests %></div>
        <div class="mr-sm-2"><i class="fas fa-euro-sign"></i><%= @flat.price_per_night %></div>
      </div>
    </div>

    <div class="d-flex card justify-content-between">
      <h3>Share</h3>
      <p>Social media</p>
    </div>
  </div>
</div>
